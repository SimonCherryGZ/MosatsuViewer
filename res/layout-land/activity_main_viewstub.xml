<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/com.simoncherry.mosatsu"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    xmlns:android="http://schemas.android.com/apk/res/android">

    
    <com.simoncherry.mosatsu.Custom.ScratchCard
        android:id="@+id/mycard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        custom:imageSideA="@drawable/cover2_a"
        custom:imageSideB="@drawable/cover2_b"  />
    
    <LinearLayout
        android:id="@+id/top_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#80a9a9a9"
        android:visibility="invisible" >
        
        <Button
            android:id="@+id/reset_btn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/main_btn_reset"
            android:ems="2"
            android:singleLine="false" >
        </Button>
        
         <Button
            android:id="@+id/select_btn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/main_btn_select1"
            android:ems="2"
            android:singleLine="false" >
            
        </Button>
        
    </LinearLayout>
    
    <SeekBar
        android:id="@+id/seekbar"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true"
    	android:paddingLeft="60dp"
    	android:paddingStart="60dp"
    	android:paddingRight="120dp"
    	android:paddingEnd="120dp"
    	android:max="5"
    	android:progress="2"
    	android:background="#80a9a9a9"
    	android:visibility="invisible" />
    
    <com.simoncherry.mosatsu.Custom.MyScrollView
        android:id="@+id/id_horizontalScrollView"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#80a9a9a9"
        android:scrollbars="none"
        android:visibility="invisible" >

        <LinearLayout
            android:id="@+id/id_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical" >
        </LinearLayout>
    </com.simoncherry.mosatsu.Custom.MyScrollView> 

        
</RelativeLayout>